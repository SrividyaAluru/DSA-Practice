/******************************************************************************
easy - Print a pattern without using any loop
Input: n = 16
Output: 16, 11, 6, 1, -4, 1, 6, 11, 16

Input: n = 10
Output: 10, 5, 0, 5, 10                              

*******************************************************************************/

#include <iostream>

using namespace std;

void pattern(int n){
    
    cout<< n<< " ";
    
    if(n<1){
        return;
        
    }
    pattern(n-5);
    cout<< n << " ";
    return;
}

int main()
{
    int n=10;
    pattern(n);
    // cout<<"Hello World";

    return 0;
}
